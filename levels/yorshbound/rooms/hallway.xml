<sburb description='hallway'>
	
	<!-- no dependencies, rose is already loaded -->
	
	<assets>
		<asset name='hallwayBG' type='graphic'>rooms/hallwayBG.png</asset>
		<asset name='hallwayFG' type='graphic'>rooms/hallwayFG.png</asset>
		<asset name='hallwayMap' type='graphic'>rooms/hallwayMap.png</asset>
		<asset name='stairs' type='graphic'>objects/items/hallway/stairs.png</asset>
		<asset name='pointer' type='graphic'>objects/items/hallway/pointer.png</asset>
		<asset name='corner' type='graphic'>objects/items/hallway/corner.png</asset>
		<asset name='statue2' type='graphic'>objects/items/hallway/statue2.png</asset>
		<asset name='pedistal' type='graphic'>objects/items/hallway/pedistal2.png</asset>
		<asset name='roseDoor' type='graphic'>objects/items/hallway/roseDoor.png</asset>
		
		
		<!--
		<asset name='pictureUnicorn' type='graphic'>rooms/hallwayMap.png</asset>
