<sburb description='rose'>

<classes>
	
	<fighter class='rose' name='rose' width='90' height='40'>
		<animation name='idle' sheet='roseIdle' x='-120' y='-280'  length='2' frameInterval='5'/>
  	 	<animation name='walk' sheet='roseWalk' x='-100' y='-280' length='4' frameInterval='3'/>
  	 	<animation name='idleBack' sheet='roseIdleBack' x='-100' y='-280' length='2' frameInterval='4'/>
  	 	<animation name='walkBack' sheet='roseWalkBack' x='-100' y='-280' length='4' frameInterval='3'/>
		<animation name='dance' sheet='roseDance' x='-150' y='-280' length='30' frameInterval='2'/>
		<animation name='play' sheet='rosePlay' x='-150' y='-280' length='8' frameInterval='2'/>
	</fighter>
	
	<!-- common command to "be" the character. -->
	<action class='beRose' name='Be Rose.' command='macro'>
		<args>
			<action command='changeChar' noDelay='true'>
				<args>rose</args>
				<action command='playSong' noDelay='true'>
					<args>roseSong,0</args>
				</action>
			</action>
		</args>
	</action>
	
	<action class='reset' name='stop. now. i hate it.' command='macro'>
		<args>
			<action command='startAnimation'>
				<args>rose,idle</args>
				<action command='removeAction'>
					<args>rose,stop. now. i hate it.</args>
					<action command='setGameState' noDelay='true'>
						<args>roseDance, false</args>
					</action>	
				</action>
			</action>
			
		</args>
	</action>	
	<action class='start' command='macro' name='Dance!!'>
		<args>
			<action command='startAnimation'>
				<args>rose,dance</args>
				<action command='removeAction'>
					<args>rose,Dance!!</args>
						<action command='addAction'>
							<args>rose,
								  <action class='reset' /></args>
						</action>
				</action>
			</action>
		</args>
	</action>
	
</classes>

<assets>
	<asset name='roseWalk' type='graphic'>chars/rose/roseWalkSheet.png</asset>
	<asset name='roseWalkBack' type='graphic'>chars/rose/roseWalkBackSheet.png</asset>
	<asset name='roseIdle' type='graphic'>chars/rose/roseIdleSheet.png</asset>
	<asset name='roseIdleBack' type='graphic'>chars/rose/roseIdleBackSheet.png</asset>
	<asset name='roseDance' type='graphic'>chars/rose/dance.png</asset>
	<asset name='rosePlay' type='graphic'>chars/rose/rosePlay.png</asset>
	
	<!-- her background music -->
	<asset name='roseSong' type='audio'>audio/music/smile.ogg;audio/music/smile.mp3</asset>
</assets>
</sburb>